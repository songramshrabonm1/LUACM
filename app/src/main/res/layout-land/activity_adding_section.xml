<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dashboardadmin.addAdminCr.AddingSection">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="0dp"
        android:id="@+id/images"
        android:scaleType="centerCrop"
        android:src="@drawable/img_10" />

    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:background="@drawable/gradient_shape2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/setTEXT"
        android:text="SetTEXT"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:textSize="39dp"
        android:textStyle="bold"
        android:visibility="gone"
        android:layout_marginTop="190dp"
        android:textColor="#1B4866" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/ScrollingTEXT"
        android:layout_marginTop="0dp"
        android:layout_below="@+id/images">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="10dp">

            <!-- Left Column (This will hold the text input fields) -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="0dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/SelectRating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="30dp"
                    app:boxBackgroundMode="none"
                    android:background="@drawable/textview_background"
                    app:hintEnabled="false">
                    <TextView
                        android:id="@+id/Select_Rule"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:drawablePadding="10dp"
                        android:text="Select Rule \n"
                        android:textColor="#BCA2A2"
                        android:paddingTop="15dp"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:visibility="gone"
                        android:textSize="22sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/titleTil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/textview_background"
                    app:boxBackgroundMode="none"
                    app:hintEnabled="false">
                    <EditText
                        android:id="@+id/nameee"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:drawablePadding="10dp"
                        android:hint="Name"
                        android:textColorHint="@color/black"
                        android:inputType="textMultiLine|textCapCharacters"
                        android:textColor="@color/black"
                        android:textSize="19sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/EmailSet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/textview_background"
                    app:boxBackgroundMode="none"
                    app:hintEnabled="false">
                    <EditText
                        android:id="@+id/Emails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:inputType="textEmailAddress"
                        android:drawablePadding="10dp"
                        android:hint="Email"
                        android:textColorHint="@color/black"
                        android:textColor="@color/black"
                        android:textSize="19sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/MobileNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/textview_background"
                    app:boxBackgroundMode="none"
                    app:hintEnabled="false">
                    <EditText
                        android:id="@+id/phnNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:inputType="text|number"
                        android:drawablePadding="10dp"
                        android:hint="Mobile Number"
                        android:textColorHint="@color/black"
                        android:textColor="@color/black"
                        android:textSize="19sp" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <!-- Right Column (Can be used for other controls if necessary) -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="10dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/UploadControlling"
                    android:text="Upload"
                    android:textColor="@color/white"
                    android:layout_below="@+id/ScrollingTEXT"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginTop="0dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:backgroundTint="#115B8D"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/shape_button"
                    ></androidx.appcompat.widget.AppCompatButton>

                <!-- Add any additional elements for the right column -->
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>
