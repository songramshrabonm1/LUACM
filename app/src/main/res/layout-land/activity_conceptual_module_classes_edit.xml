<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="0dp"
        android:id="@+id/images"
        android:scaleType="centerCrop"
        android:src="@drawable/img_10" />

    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:background="@drawable/gradient_shape2" />



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/ScrollingTEXT"
        android:layout_marginTop="0dp"
        android:layout_below="@+id/images">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="10dp">



            <!-- Left Column (This will hold the text input fields) -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="0dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/titleTil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_below="@+id/TextViewEdit"
                    android:background="@drawable/textview_background"
                    app:boxBackgroundMode="none"
                    app:hintEnabled="false"
                    >

                    <EditText
                        android:id="@+id/googleDriveLink"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:drawablePadding="10dp"
                        android:hint="Google Drive Link "
                        android:textAllCaps="false"
                        android:textColorHint="@color/black"
                        android:textColor="@color/black"
                        android:textSize="19sp"></EditText>
                </com.google.android.material.textfield.TextInputLayout>



                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/classNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/titleTil"
                    android:background="@drawable/textview_background"
                    app:boxBackgroundMode="none"
                    app:hintEnabled="false">

                    <EditText
                        android:id="@+id/ClassNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:drawablePadding="10dp"
                        android:hint="Class - 1"
                        android:textAllCaps="false"
                        android:textColorHint="@color/black"
                        android:textColor="@color/black"
                        android:textSize="19sp"></EditText>
                </com.google.android.material.textfield.TextInputLayout>








                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text"
                    android:text="Properly check whether the uploaded drive link is working well or not. Also, make sure that the video in this drive link is not longer than 20-25 minutes.You will upload 20 classes. Are you sure this video is your 20th class or below? "
                    android:textColor="#DF1D43"
                    android:textAlignment="center"
                    android:layout_below="@+id/classNumber"
                    android:textStyle="normal"
                    android:textSize="20sp"
                    ></TextView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="10dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/AddClassDriveLink"
                    android:text="Updated Drive Link"
                    android:textColor="@color/white"
                    android:layout_below="@+id/text"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:backgroundTint="#115B8D"
                    android:background="@drawable/shape_button"
                    ></androidx.appcompat.widget.AppCompatButton>



                <!--                <androidx.appcompat.widget.AppCompatButton-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:id="@+id/AddClassDriveLink"-->
<!--                    android:text="Add Drive Link"-->
<!--                    android:textColor="@color/white"-->
<!--                    android:layout_below="@+id/scrrling"-->
<!--                    android:textStyle="bold"-->
<!--                    android:textSize="20sp"-->
<!--                    android:layout_marginLeft="20dp"-->
<!--                    android:layout_marginRight="20dp"-->
<!--                    android:backgroundTint="#115B8D"-->
<!--                    android:background="@drawable/shape_button"-->
<!--                    ></androidx.appcompat.widget.AppCompatButton>-->
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>