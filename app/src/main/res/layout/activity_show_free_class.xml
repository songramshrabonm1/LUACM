<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    tools:context=".dashboardadmin.routinepart.ShowFreeClass">




    <ImageButton
        android:id="@+id/backBtnnccc"
        android:layout_width="65dp"
        android:layout_height="59dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:background="#141526"
        android:contentDescription="backButton"
        android:padding="5dp"
        android:visibility="gone"
        android:src="@drawable/baseline_arrow_back_24"></ImageButton>



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="0dp"
        android:id="@+id/images"
        android:scaleType="centerCrop"
        android:src="@drawable/img_10"></ImageView>


    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-250dp"
        android:background="@drawable/gradient_shape2">

    </View>


    <TextView
        android:id="@+id/TextViewEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Free ClassRoom"
        android:textColor="#1B4866"
        android:textStyle="bold"
        android:textSize="46sp"
        android:layout_marginTop="100dp"
        android:textAlignment="center"
        android:layout_below="@+id/backBtnnccc"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        ></TextView>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/classessFree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/row_block_class"
        android:layout_below="@+id/images"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"></androidx.recyclerview.widget.RecyclerView>





</RelativeLayout>