<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#141526"
    tools:context=".dashboarduser.UserDashboarHome">


    <Button
        android:id="@+id/pdfButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#073D6D"
        android:text="Pdf"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/videoBtn"
        app:layout_constraintStart_toStartOf="parent"></Button>


    <Button
        android:id="@+id/rtnbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="freeClass"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/ProbleSolvingPlatformplatformBtn"
        app:layout_constraintHorizontal_bias="0.205"
        app:layout_constraintStart_toEndOf="@+id/pdfButton"
        tools:layout_editor_absoluteY="96dp" />

    <Button
        android:id="@+id/videoBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#073D6D"
        android:text="Video"
        android:textColor="@color/white"

        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.255"
        app:layout_constraintStart_toEndOf="@+id/pdfButton"
        app:layout_constraintTop_toTopOf="parent"></Button>

    <Button
        android:id="@+id/routine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#073D6D"
        android:text="Routine"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.255"
        app:layout_constraintStart_toEndOf="@+id/videoBtn"
        app:layout_constraintTop_toTopOf="parent"></Button>


    <Button
        android:id="@+id/ProbleSolvingPlatformplatformBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:backgroundTint="#073D6D"
        android:text="problmesolving"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/videoBtn"
        app:layout_constraintTop_toTopOf="parent">

    </Button>

</androidx.constraintlayout.widget.ConstraintLayout>