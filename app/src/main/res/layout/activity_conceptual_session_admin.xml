<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dashboardadmin.videoSection.videoUploadAdmin.mainCourse.Conceptual.ConceptualSessionAdmin">


    <ImageButton
        android:id="@+id/BackButton"
        android:layout_width="69dp"
        android:layout_height="wrap_content"
        android:contentDescription="BackBtn"
        android:src="@drawable/baseline_arrow_back_24"
        android:text="logOut"
        android:visibility="gone"
        android:textStyle="bold|italic" />



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="0dp"
        android:id="@+id/images"
        android:scaleType="centerCrop"
        android:src="@drawable/img_10"></ImageView>


    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-250dp"
        android:background="@drawable/gradient_shape2">

    </View>

    <TextView
        android:id="@+id/choseSection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Conceptual Section"
        android:textColor="#1B4866"
        android:textAllCaps="true"
        android:textSize="34dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="150dp"
        android:visibility="gone"
        android:layout_below="@+id/BackButton"
        android:layout_centerInParent="true" />

    <EditText
        android:id="@+id/search_Et"
        android:layout_width="402dp"
        android:layout_height="62dp"
        android:layout_below="@+id/images"
        android:layout_centerVertical="true"
        android:layout_marginTop="0dp"
        android:layout_marginHorizontal="20dp"
        android:hint="Search"
        android:background="@drawable/card_shape"
        android:padding="10dp"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        ></EditText>

    <!-- এখানে রিসকাইলারভিউ দেখানোর জন্যে আমরা row_category টা  বানিয়েছি।  -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/category_List"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/row_video_day_admin"
        android:layout_above="@+id/addUploadedcategoryBtn"
        android:layout_below="@+id/search_Et"
        android:layout_marginStart="5dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"></androidx.recyclerview.widget.RecyclerView>


    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addUploadedcategoryBtn"
        android:text="Upload Topic Name"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginBottom="10sp"
        android:layout_marginHorizontal="20dp"
        android:backgroundTint="#115B8D"
        android:background="@drawable/shape_button"
        ></androidx.appcompat.widget.AppCompatButton>





</RelativeLayout>