<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dashboardadmin.problemsloving.ratingWise.createRatingWise">

<!--    android:background="#141526"-->


    <ImageButton
        android:id="@+id/BackButtonRating"
        android:layout_width="76dp"
        android:layout_height="55dp"
        android:backgroundTint="#141526"
        android:contentDescription="BackBtn"
        android:src="@drawable/baseline_arrow_back_24"
        android:text="logOut"
        android:visibility="gone"
        android:textStyle="bold|italic" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="0dp"
        android:id="@+id/images"
        android:scaleType="centerCrop"
        android:src="@drawable/img_10"></ImageView>



    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:id="@+id/viewsss"
        android:background="@drawable/gradient_shape2">

    </View>

    <TextView
        android:id="@+id/choseSection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Platform Name"
        android:textColor="#1B4866"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:textSize="38dp"
        android:textStyle="bold"
        android:visibility="gone"
        android:layout_marginTop="150dp"
        android:layout_below="@+id/BackButtonRating"
        android:layout_centerInParent="true" />


    <EditText
        android:id="@+id/search_EtRating"
        android:layout_width="402dp"
        android:layout_height="62dp"
        android:layout_below="@+id/images"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:hint="Search"
        android:padding="10dp"
        android:background="@drawable/card_shape"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        ></EditText>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/RatingWiseRecyclerView"
        android:layout_below="@+id/search_EtRating"
        android:layout_above="@+id/CreateRatingBtn"
        tools:listitem="@layout/row_rating_wise_contest_set"
       >

    </androidx.recyclerview.widget.RecyclerView>

    <androidx.appcompat.widget.AppCompatButton
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/CreateRatingBtn"
    android:text="Create Rating"
    android:textColor="@color/white"
    android:textStyle="bold"
    android:textSize="20sp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="15dp"
    android:backgroundTint="#115B8D"
    android:layout_alignParentBottom="true"
    android:background="@drawable/shape_button"
    ></androidx.appcompat.widget.AppCompatButton>




</RelativeLayout>